@page "/place/{param}"
@using Radzen.Blazor

<div class="row">
    <div class="col-xl-6">
        <h3>Rating with 5 stars</h3>
        <RadzenRating Change=@(v => OnChange(v, "Rating with 5 stars")) />

    </div>
</div>

<h3>Place: @Param</h3>

@code {
    [Parameter]
    public string Param { get; set; }

    void OnChange(int value, string name)
    {
        Console.WriteLine($"Value: {value} Name: {name}");
    }



}
